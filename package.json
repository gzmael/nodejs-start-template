{
  "name": "nodejs-start-template",
  "version": "1.0.0",
  "description": "NodeJS Boilerplate by Jezmael",
  "main": "index.js",
  "repository": "git@github.com:gzmael/nodejs-start-template.git",
  "author": "Jezmael Basilio <jezmaelbasilio@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "node dist/shared/infra/http/server.js",
    "build": "babel src --extensions \".ts\" --out-dir dist --copy-files",
    "dev:server": "ts-node-dev -r tsconfig-paths/register --respawn --transpile-only --exit-child --ignore-watch node_modules src/shared/infra/http/server.ts",
    "migrate:test": "dotenv -e .env.test -- prisma migrate reset",
    "test:ut": "jest --testPathIgnorePatterns \"(.*).test.ts\"",
    "test:it": "npm run migrate:test && dotenv -e .env.test -- jest --testPathIgnorePatterns \"(.*).spec.ts\" --coverage=false --setupFilesAfterEnv ",
    "test": "npm run test:ut && npm run test:it",
    "seed": "prisma db seed",
    "seed:test": "dotenv -e .env.test -- npx prisma db seed",
    "prepare": "husky install",
    "commit": "git-cz"
  },
  "dependencies": {
    "@prisma/client": "^3.7.0",
    "@sendgrid/mail": "^7.6.0",
    "bcryptjs": "^2.4.3",
    "celebrate": "^15.0.0",
    "cors": "^2.8.5",
    "dayjs": "^1.10.7",
    "dotenv": "^10.0.0",
    "express": "^4.17.2",
    "express-async-errors": "^3.1.1",
    "handlebars": "^4.7.7",
    "ioredis": "^4.28.2",
    "jsonwebtoken": "^8.5.1",
    "multer": "^1.4.4",
    "nodemailer": "^6.7.2",
    "reflect-metadata": "^0.1.13",
    "tsyringe": "^4.6.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.0",
    "@babel/core": "^7.16.5",
    "@babel/node": "^7.16.5",
    "@babel/plugin-proposal-decorators": "^7.16.5",
    "@babel/preset-env": "^7.16.5",
    "@babel/preset-typescript": "^7.16.5",
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/ioredis": "^4.28.5",
    "@types/jest": "^27.0.3",
    "@types/multer": "^1.4.7",
    "@types/nodemailer": "^6.4.4",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "babel-plugin-module-resolver": "^4.1.0",
    "babel-plugin-transform-typescript-metadata": "^0.3.2",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^8.5.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-import-helpers": "^1.2.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.4.5",
    "jest-mock-extended": "^2.0.4",
    "prettier": "^2.5.1",
    "prisma": "^3.7.0",
    "supertest": "^6.1.6",
    "ts-jest": "^27.1.2",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^4.5.4"
  },
  "prisma": {
    "seed": "ts-node-dev -r tsconfig-paths/register --inspect --transpile-only prisma/seed.ts"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "volta": {
    "node": "16.13.1"
  }
}
